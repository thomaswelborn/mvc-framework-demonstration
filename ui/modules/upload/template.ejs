<header>
  <h2>Upload</h2>
</header>
<main>
  <div id="upload-image-form" class="form">
    <div class="form-group">
      <div class="input-group">
        <label for="upload-image-input" class="button icon-image">
          <span>ADD</span>
        </label>
        <input type="file" id="upload-image-input">
      </div>
    </div>
    <% if(data.ui.imageReady) { %>
      <div class="button-group">
        <button type="button" id="upload-image-button" class="button icon-box-remove" data-action="upload">UPLOAD</button>
      </div>
    <% } %>
  </div>
  <% if(data.ui.imageReady) { %>
    <div id="upload-image-preview"></div>
  <% } %>
</main>
