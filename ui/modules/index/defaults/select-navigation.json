{
  "models": {
    "ui": {
      "localStorage": {
        "sync": true,
        "endpoint": "/api/index/select-navigation/models/ui"
      },
      "defaults": {
        "selectedOption": "RANDOM"
      }
    }
  },
  "views": {
    "view": {
      "attributes": {
        "id": "index-select-navigation"
      },
      "children": [
        {
          "tag": {
            "name": "select",
            "close": true
          },
          "attributes": {
            "class": "select"
          },
          "children": [
            {
              "tag": {
                "name": "option",
                "close": true
              },
              "attributes": {
                "id": "index-select-navigation-random",
                "value": "RANDOM"
              },
              "innerText": "Random"
            },
            {
              "tag": {
                "name": "option",
                "close": true
              },
              "attributes": {
                "id": "index-select-navigation-ascending",
                "value": "ASC"
              },
              "innerText": "Ascending"
              },
            {
              "tag": {
                "name": "option",
                "close": true
              },
              "attributes": {
                "id": "index-select-navigation-descending",
                "value": "DESC"
              },
              "innerText": "Descending"
            }
          ]
        },
        {
          "tag": {
            "name": "nav",
            "close": true
          },
          "attributes": {
            "class": "subnavigation"
          }
        }
      ]
    }
  },
  "controllers": {
    "buttons": [
      {
        "models": {
          "ui": {
            "defaults": {
              "auth": false,
              "noAuth": true,
              "textContent": "PREV",
              "associatedOptions": [
                "ASC",
                "DESC"
              ]
            }
          }
        },
        "views": {
          "view": {
            "attributes": {
              "id": "photos-select-navigation-button-previous",
              "class": "button",
              "data-action": "previous"
            }
          }
        }
      },
      {
        "models": {
          "ui": {
            "defaults": {
              "auth": false,
              "noAuth": true,
              "textContent": "NEXT",
              "associatedOptions": [
                "ASC",
                "DESC"
              ]
            }
          }
        },
        "views": {
          "view": {
            "attributes": {
              "id": "photos-select-navigation-button-next",
              "class": "button",
              "data-action": "next"
            }
          }
        }
      },
      {
        "models": {
          "ui": {
            "defaults": {
              "auth": false,
              "noAuth": true,
              "textContent": "NEW",
              "associatedOptions": [
                "RANDOM"
              ]
            }
          }
        },
        "views": {
          "view": {
            "attributes": {
              "id": "photos-select-navigation-button-new",
              "class": "button",
              "data-action": "new"
            }
          }
        }
      }
    ]
  }
}