{
  "models": {
    "ui": {
      "localStorage": {
        "sync": true,
        "endpoint": "/api/photos/select-navigation/settings"
      },
      "defaults": {
        "selectedOption": "ASC"
      }
    }
  },
  "views": {
    "view": {
      "attributes": {
        "id": "photos-select-navigation"
      },
      "children": [
        {
          "tag": {
            "name": "select",
            "close": true
          },
          "attributes": {
            "class": "select"
          },
          "children": [
            {
              "tag": {
                "name": "option",
                "close": true
              },
              "attributes": {
                "id": "photos-select-navigation-option-ascending",
                "value": "ASC"
              },
              "innerText": "Ascending"
              },
            {
              "tag": {
                "name": "option",
                "close": true
              },
              "attributes": {
                "id": "photos-select-navigation-option-descending",
                "value": "DESC"
              },
              "innerText": "Descending"
            }
          ]
        },
        {
          "tag": {
            "name": "nav",
            "close": true
          },
          "attributes": {
            "class": "subnavigation"
          }
        }
      ]
    }
  },
  "controllers": {
    "buttons": [
      {
        "models": {
          "ui": {
            "defaults": {
              "auth": false,
              "noAuth": true,
              "associatedOptions": [
                "ASC",
                "DESC"
              ]
            }
          }
        },
        "views": {
          "view": {
            "attributes": {
              "id": "photos-select-navigation-button-previous",
              "class": "button icon-circle-left",
              "data-action": "previous"
            }
          }
        }
      },
      {
        "models": {
          "ui": {
            "defaults": {
              "auth": false,
              "noAuth": true,
              "associatedOptions": [
                "ASC",
                "DESC"
              ]
            }
          }
        },
        "views": {
          "view": {
            "attributes": {
              "id": "photos-select-navigation-button-next",
              "class": "button icon-circle-right",
              "data-action": "next"
            }
          }
        }
      }
    ]
  }
}